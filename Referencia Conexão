// Shortcode: [websocket_rocket_league_display]
function websocket_rocket_league_display_shortcode() {
    ob_start();
    ?>
    <style>
        #ast-desktop-header > div > div > div > div { display: none; }
        #led-status {
            display: inline-block;
            width: 20px;
            height: 20px;
            border-radius: 50%;
            background: gray;
            margin-left: 10px;
            vertical-align: middle;
            transition: background 0.1s;
        }
    </style>

    <div>
        <h3>Servidor de Vis√£o (Rocket League / Pac-Man)</h3>
        <div id="vision-data" style="font-family: monospace; white-space: pre-wrap; background:#f4f4f4; padding:10px; margin-bottom:20px;">
            Conectando ao servidor de vis√£o...
        </div>

        <h3>Controle do Rob√¥</h3>
        <div style="margin-bottom:15px;">
            <label for="robot-ip">IP do Rob√¥:</label><br>
            <select id="robot-ip" style="width:220px; padding:5px;">
                <option value="192.168.1.107">‚öΩ Rocket League Azul (carro_1)</option>
                <option value="">‚öΩ Rocket League Rosa (carro_2) ‚Äî A DEFINIR</option>
                <option value="192.168.1.116">üëæ Pac-Man</option>
                <option value="192.168.1.119">üëª Fantasma Azul</option>
                <option value="192.168.1.117">üëª Fantasma Rosa</option>
                <option value="192.168.1.120">üëª Fantasma Verde</option>
                <option value="">üëª Fantasma Vermelho ‚Äî A DEFINIR</option>
            </select>
        </div>

        <div style="margin-bottom:15px;">
            <label>Velocidade Motor Esquerdo (-255 a 255):</label><br>
            <input type="number" id="motor1" min="-255" max="255" value="0" style="width:100px; padding:5px;">
        </div>

        <div style="margin-bottom:15px;">
            <label>Velocidade Motor Direito (-255 a 255):</label><br>
            <input type="number" id="motor2" min="-255" max="255" value="0" style="width:100px; padding:5px;">
        </div>

        <button id="send-command" onclick="sendMotorCommand()">Enviar Comando</button>
        <span id="led-status">‚óè</span>

        <div id="command-status" style="margin-top:10px; color:green;"></div>
        <div id="robot-feedback" style="margin-top:10px; font-family: monospace; background:#f9f9f9; padding:8px; display:none;"></div>
    </div>

    <script type="text/javascript">
        // ===================================================================
        // üîå CONFIGURA√á√ÉO DE ENDERE√áOS IP (Centralizada no In√≠cio)
        // ===================================================================

        // Servidor de Vis√£o
        const VISION_WS_URL = 'ws://192.168.1.106:8765'; // Rocket League & Pac-Man (mesmo servidor)

        // IPs dos Rob√¥s (null = n√£o configurado)
        const ROBOT_IPS = {
            // Rocket League
            rocket_azul:    '192.168.1.107',  // carro_1
            rocket_rosa:    null,             // carro_2 ‚Äî A DEFINIR

            // Pac-Man Arena
            pacman:         '192.168.1.116',
            fantasma_azul:  '192.168.1.119',
            fantasma_rosa:  '192.168.1.117',
            fantasma_verde: '192.168.1.120',
            fantasma_vermelho: null          // A DEFINIR
        };

        // ===================================================================
        // üëÅÔ∏è‚Äçüó®Ô∏è Conex√£o com o Servidor de Vis√£o
        // ===================================================================
        let visionWs = null;
        const visionDiv = document.getElementById('vision-data');

        function connectVision() {
            visionWs = new WebSocket(VISION_WS_URL);

            visionWs.onopen = function() {
                visionDiv.innerHTML = 'Conectado ao servidor de vis√£o.\nAguardando dados...';
            };

            visionWs.onmessage = function(event) {
                try {
                    const data = JSON.parse(event.data);
                    const formatted = JSON.stringify(data, null, 2);
                    visionDiv.innerHTML = '<strong>Dados de Vis√£o:</strong>\n' + formatted;
                } catch (e) {
                    visionDiv.innerHTML = 'Erro ao processar vis√£o: ' + event.data;
                }
            };

            visionWs.onclose = function() {
                visionDiv.innerHTML = '‚ö†Ô∏è Conex√£o com vis√£o perdida. Reconectando em 3s...';
                setTimeout(connectVision, 3000);
            };

            visionWs.onerror = function(err) {
                visionDiv.innerHTML = 'Erro na conex√£o de vis√£o: ' + (err.message || 'desconhecido');
            };
        }

        connectVision();

        // ===================================================================
        // ü§ñ Controle do Rob√¥
        // ===================================================================
        let robotWs = null;
        let robotResponseTimeout = null;

        function setLed(color) {
            document.getElementById('led-status').style.background = color;
        }

        function blink(color, times = 3, interval = 150) {
            let count = 0;
            const flash = () => {
                setLed(count % 2 === 0 ? color : 'gray');
                count++;
                if (count < times * 2) {
                    setTimeout(flash, interval);
                } else {
                    setLed('gray');
                }
            };
            flash();
        }

        function sendMotorCommand() {
            const ip = document.getElementById('robot-ip').value.trim();
            const motor1 = parseInt(document.getElementById('motor1').value) || 0;
            const motor2 = parseInt(document.getElementById('motor2').value) || 0;
            const statusDiv = document.getElementById('command-status');
            const feedbackDiv = document.getElementById('robot-feedback');

            if (!ip || ip === '') {
                statusDiv.innerHTML = '‚ùå IP do rob√¥ n√£o selecionado ou inv√°lido.';
                setLed('red');
                setTimeout(() => setLed('gray'), 3000);
                return;
            }

            if (robotResponseTimeout) clearTimeout(robotResponseTimeout);
            blink('blue');

            const robotWsUrl = `ws://${ip}:81`;

            if (robotWs && (robotWs.readyState === WebSocket.CLOSING || robotWs.readyState === WebSocket.CLOSED)) {
                robotWs = null;
            }

            if (!robotWs || robotWs.readyState !== WebSocket.OPEN) {
                robotWs = new WebSocket(robotWsUrl);

                robotWs.onopen = () => sendCommand();
                robotWs.onmessage = (event) => {
                    if (robotResponseTimeout) {
                        clearTimeout(robotResponseTimeout);
                        robotResponseTimeout = null;
                    }
                    blink('green');
                    try {
                        const telemetry = JSON.parse(event.data);
                        const feedback = {
                            motor1_vel: telemetry.motor1?.vel ?? 'N/A',
                            motor2_vel: telemetry.motor2?.vel ?? 'N/A'
                        };
                        feedbackDiv.innerHTML = `<strong>‚úÖ Feedback do Rob√¥:</strong><br>${JSON.stringify(feedback, null, 2)}`;
                        feedbackDiv.style.display = 'block';
                    } catch (e) {
                        feedbackDiv.innerHTML = '‚ö†Ô∏è Erro ao processar feedback do rob√¥.';
                        feedbackDiv.style.display = 'block';
                    }
                };
                robotWs.onerror = (err) => {
                    statusDiv.innerHTML = `‚ùå Erro ao conectar no rob√¥ (${ip}): ${err.message || 'desconhecido'}`;
                    setLed('red');
                    setTimeout(() => setLed('gray'), 3000);
                };
            } else {
                sendCommand();
            }

            function sendCommand() {
                const command = JSON.stringify({ motor1_vel: motor1, motor2_vel: motor2 });
                robotWs.send(command);
                statusDiv.innerHTML = `‚úÖ Comando enviado: ${command}`;
                robotResponseTimeout = setTimeout(() => {
                    setLed('red');
                    setTimeout(() => setLed('gray'), 3000);
                    statusDiv.innerHTML += ' ‚ö†Ô∏è Sem resposta do rob√¥.';
                    robotResponseTimeout = null;
                }, 2000);
            }
        }
    </script>
    <?php
    return ob_get_clean();
}
add_shortcode('websocket_rocket_league_display', 'websocket_rocket_league_display_shortcode');
